<!DOCTYPE html>
<html lang="en">
  <head>
    {{> header }}
    <link href="{{assets}}/index.css" rel="stylesheet">
  </head>
  <body>
    {{> index-page-header }}

    <div id="main" class="container">

      <section class="hero">
        {{> body }}
      </section>

      <section id="tags">
        <p>Filter by selecting a tag:</p>
        {{> index-tag-filter }}
        <hr>
      </section>

      <section id="tests">
        {{> index-test-list }}
      </section>
      
    </div>

    <footer>
      {{> footer }}
      <script src="{{assets}}/index.js"></script>
    </footer>
  </body>
</html>