<!DOCTYPE html>
<html lang="en">
  <head>
    {{> header }}
    <link href="assets/style.css" rel="stylesheet">
    <script src="assets/knockout-3.2.0.js"></script>
  </head>
  <body>
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>
    {{> body }}
    <hr>
    {{#withSort pages "data.title"}}
      {{#unless data.exclude}}
        <h2> <a href="{{{ filename }}}">{{ data.title }}</a></h2>
        <p>{{ data.description }}</p>
        <iframe src="{{{ filename }}}"></iframe>
      {{/unless}}
    {{/withSort}}
    {{> footer }}
  </body>
</html>
